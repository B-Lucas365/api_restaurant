

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String @id @default(uuid())
  email     String @unique
  password  String 
  name      String
  Foods     Foods? @relation(references: [id], fields: [foodsId])
  foodsId   String?

  @@map("users")
}

model Foods {
  id          String @id @default(uuid())
  description String
  price       String
  image       String
  name        String
  Users       Users[]
  userId      String?

  @@map("foods")
}
